{
    "openapi": "3.0.0",
    "info": {
        "title": "RentalCar API Documentation",
        "description": "This is an API RENT",
        "version": "1.0.0",
        "contact": {
            "email": "julio.koronati@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Category post",
                "description": "Enable to create a new category for rental cars",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "SUV",
                                    "description": "Conforto com elegância e potência"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "Categories get",
                "description": "Enable to get all categories",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}